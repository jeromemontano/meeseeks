<label for="{{ id }}" class="form-label">{{ label }}</label>
<select id="{{ id }}"
        class="form-input"
        {% for attr, val in dataAttributes|default({}) %}
            data-{{ attr }}="{{ val }}"
        {% endfor %}
>
    <option disabled selected>{{ placeholder }}</option>
    {% for opt in options %}
        <option value="{{ opt.value }}">
            {{ opt.label }}
        </option>
    {% endfor %}
</select>
